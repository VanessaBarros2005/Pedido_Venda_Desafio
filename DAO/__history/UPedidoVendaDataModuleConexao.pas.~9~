unit UPedidoVendaDataModuleConexao;

interface

uses
  System.SysUtils,
  System.Classes,
  Data.DB,
  FireDAC.Comp.Client,
  FireDAC.Stan.Intf,
  FireDAC.Stan.Option,
  FireDAC.Stan.Error,
  FireDAC.Stan.Def,
  FireDAC.Stan.Pool,
  FireDAC.Stan.Async,
  FireDAC.Phys.Intf,
  FireDAC.Phys.SQLite,
  FireDAC.Phys.SQLiteDef,
  FireDAC.UI.Intf,
  FireDAC.VCLUI.Wait,
  FireDAC.DApt,
  FireDAC.Phys,
  FireDAC.Stan.ExprFuncs,
  FireDAC.Phys.SQLiteWrapper.Stat,
  FireDAC.Comp.UI;

type
  TUPedidoDesafioDataModuleConexao = class(TDataModule)
    ConexaoBanco: TFDConnection;
    FDPhysSQLiteDriverLink1: TFDPhysSQLiteDriverLink;
    FDGUIxWaitCursor1: TFDGUIxWaitCursor;
    procedure ConexaoBancoAfterConnect(Sender: TObject);
  private
  public
  end;

var
  UPedidoDesafioDataModuleConexao: TUPedidoDesafioDataModuleConexao;

implementation

{$R *.dfm}

procedure TUPedidoDesafioDataModuleConexao.ConexaoBancoAfterConnect(
  Sender: TObject);
begin
  ConexaoBanco.ExecSQL('PRAGMA foreign_keys = ON;');
end;

end.

